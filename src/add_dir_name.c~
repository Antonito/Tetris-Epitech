#include "tetris.h"

char	*add_dir_name(char *name)
{
  int	i;
  int	j;
  char	*res;
  char	*dir;

  i = -1;
  j = -1;
  if (!(dir = my_strdup("tetriminos/")) ||
	!(res = malloc(sizeof(char) * (my_strlen(name) + my_strlen(dir) + 1))))
    return (NULL);
  while (dir[i++])
    res[i] = dir[i];
  while (name[++j])
    res[++i] = name[j];
  res[i] = 0;
  printf("name = %s\n", name);
  printf("dir = %s\n", dir);
  printf("res = %s\n", res);
  return (res);
}
